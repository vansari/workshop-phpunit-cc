{
    "name": "kurt-junker/workshop-unit-test-coverage",
    "description": "A workshop project for Unit Testing, Mocking and Coverage flow",
    "license": "proprietary",
    "keywords": [],
    "authors": [
        {
            "name": "Kurt Junker",
            "email": "kurt.junker@posteo.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "vansari\\workshop\\phpunit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "vansari\\workshop\\phpunit\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.6",
        "phpstan/phpstan": "1.*",
        "overtrue/phplint": "9.*",
        "squizlabs/php_codesniffer": "3.*",
        "mockery/mockery": "^1.6",
        "infection/infection": "^0.27.0"
    },
    "scripts": {
        "lint": "vendor/bin/phplint",
        "cs": "vendor/bin/phpcs --standard=PSR12 --extensions=php .",
        "unit": "vendor/bin/phpunit",
        "coverage": "vendor/bin/phpunit --testsuite=cov --coverage-html=coverage_html",
        "mock-no-coverage": "vendor/bin/phpunit --testsuite=no_cov --coverage-html=mock_no_coverage_html",
        "unmocked-no-coverage": "vendor/bin/phpunit --testsuite=unmocked_no_cov --coverage-html=unmocked_no_coverage_html",
        "mocked-phpunit": "vendor/bin/phpunit --testsuite=mocked_phpunit --coverage-html=mocked_phpunit_html",
        "mocked-phpunit-no-asserts": "vendor/bin/phpunit --testsuite=mocked_phpunit_no_asserts --coverage-html=mocked_phpunit_no_asserts_html",
        "test": [
            "@lint",
            "@cs",
            "@@unit"
        ]
    },
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "require": {
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.4"
    }
}
